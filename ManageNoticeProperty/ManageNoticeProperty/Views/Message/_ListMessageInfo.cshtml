@model IEnumerable<ManageNoticeProperty.ViewModel.MessageInfoViewModel>
<div class="container">
    @if (Model.Count() == 0)
    {
        <p> Brak Wiadomości</p>
    }
    else
    {
        foreach (var order in Model)
        {

            <dic class="row message-row-@order.Order.OrderId">
                <div class="col-lg-10">
                    <a href="@Url.Action("MessageInfo", "Message", new { id = order.Order.OrderId })">

                        @order.Text
                        @order.Order.Flat.City
                        @order.Order.Flat.Description
                    </a>
                </div>

                <div class="col-lg-2">
                    <a id="Delete" class="remove-message btn btn-default" data-id="@order.Order.OrderId" href="#">Usuń</a>
                </div>
            </dic>

        }
    }
</div>

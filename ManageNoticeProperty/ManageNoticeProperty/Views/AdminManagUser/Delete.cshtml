@model ManageNoticeProperty.Models.ApplicationUser

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="manage-user">
    <h2>Usuwanie</h2>

    <h3>Czy napewno chcesz usunąć użytkownika @Model.UserName?</h3>
    <div>
        <hr />
       

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Usun" class="btn btn-default" /> |
                @Html.ActionLink("Wróć", "Index", "AdminManagUser", null, new { @class = "btn btn-default" })
            </div>
        }
    </div>
</div>